<% if(locals.user && locals.user.role==='admin' ) {%>
    <div class="main-container">
        <div class="add-emp-div">

            <div class="main_head">
                <h3 style="font-weight: bold;">Add Employee</h3>
            </div>
            <div class="add-emp-form">


                <form class="form" action="/create-employee" method="POST">
                    <h4 class="heading">Enter Employee Details</h4>
                    <hr>
                    <!-- Username input -->
                    <div class="form-control">
                        <input type="text" id="name" name="username" class="login-form-input" placeholder="Username"
                            required />
                    </div>

                    <!-- Email input -->
                    <div class="form-control my-1">
                        <input type="email" id="email" name="email" class="login-form-input"
                            placeholder="Enter your email" required />
                    </div>
                    <div class="form-control my-1 d-flex">
                        <input type="text" class="login-form-input" placeholder="Select Role" />
                        <select class="login-form-input" id="role" name="role" aria-label="Default select example"
                            required>
                            <option selected value="employee">Employee</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>

                    <!-- Password input -->
                    <div class="form-control my-1">
                        <input type="password" id="password" name="password" class="login-form-input"
                            placeholder="Password" required />
                    </div>

                    <!-- Confirm password input -->
                    <div class="form-control my-1">
                        <input type="password" id="confirm_password" name="confirm_password" class="login-form-input"
                            placeholder="Confirm Password" required />
                    </div>
                    <hr>

                    <div class="my-1 d-flex justify-content-between">

                        <!-- Cancel button -->
                        <a href="/admin-dashboard" class="btn btn-danger" style="margin-left:15px">CANCEL</a>


                        <!-- Add button -->
                        <button type="submit" class="btn btn-success" style="margin-left: 30px;
                      margin-right: 15px;">ADD EMPLOYEE</button>
                    </div>
                </form>

                <!-- Link to redirect to signup page -->

            </div>

        </div>
    </div>
    <%} %>